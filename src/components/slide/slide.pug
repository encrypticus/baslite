mixin slide({ url = "../components/slide/img/slide1.png", preview = false, mods } = {})
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
    var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' slide_' + modsList[i].trim();
      }
    }
  .slide(class= allMods)
    img.slide__img(src=url, alt="slider image")
    if (preview)
      .slide__preview
        .slide__preview-icons
          img.slide__preview-img(src="../components/slide/img/preview.svg", alt="preview")
          img.slide__link-img(src="../components/slide/img/link.svg", alt="link")