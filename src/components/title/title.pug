mixin title(text, mods)
  -
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' title_' + modsList[i].trim();
        }
    }

  h3.title(class=allMods)&attributes(attributes)= text